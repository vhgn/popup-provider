{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["dom", "esnext"],
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.test.tsx"],
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "jsdom"
	}
}
